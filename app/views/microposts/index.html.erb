<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table border="1" bgcolor="#8258FA">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to '詳細', micropost %></td>
        <td><%= link_to '編集', edit_micropost_path(micropost) %></td>
        <td><%= link_to '削除', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

